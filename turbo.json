{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["NEXT_PUBLIC_API_URL", "STRIPE_API_KEY"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_API_URL", "STRIPE_API_KEY"]
    },
    "lint": {}
  }
}
