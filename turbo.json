{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
    "NEXT_PUBLIC_API_URL",
    "FRONTEND_URL",

    "NODE_ENV",
    "STRIPE_API_KEY",
    "DB_HOST",
    "DB_PORT",
    "DB_USERNAME",
    "DB_PASSWORD",
    "DB_NAME",
    "DB_DATABASE",
    "DB_SYNCHRONIZE",
    "DB_LOGGING",
    "JWT_SECRET",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_REGION",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET"
  ],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "with": ["@repo/api#dev"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_GOOGLE_CLIENT_ID",
        "NEXT_PUBLIC_API_URL",
        "FRONTEND_URL",

        "NODE_ENV",
        "STRIPE_API_KEY",
        "DB_HOST",
        "DB_PORT",
        "DB_USERNAME",
        "DB_PASSWORD",
        "DB_NAME",
        "DB_DATABASE",
        "DB_SYNCHRONIZE",
        "DB_LOGGING",
        "JWT_SECRET",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ]
    },
    "lint": {}
  }
}
